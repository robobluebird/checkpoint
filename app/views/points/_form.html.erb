    <%= form.label :longitude %>
    <%= form.text_field :longitude, readonly: true %>
  </div>

  <div class="field">
    <%= form.label :datetime %>
    <%= form.datetime_select :datetime, default: DateTime.now, disabled: true %>
  </div>

